<h1 class="title underline--magical grey-text text-lighten-3">Create your BDGT</h1>
<li class="bdgt-listing">
  <span>Input your monthly income</span>
</li>
<li class="bdgt-listing">
  <span>Input your planned purchase</span>
</li>
<li class="bdgt-listing spacing">
  <span>Generate your suggested budget to afford your purchase!</span>
</li>
{{! TODO: Render BDGT UI }}

<form id="bdgt-form">
  <div class="row">
    <div class="input-field col s8">
      <input
        onkeyup="bdgtEnter(event)"
        id="income"
        type="income"
        placeholder="Monthly Income: Ex.(2000)"
        required
      />
      <label for="income">Enter your monthly income: </label>
    </div>

    <div class="row">
      <div class="input-field col s8">
        <input
          onkeyup="bdgtEnter(event)"
          id="purchase"
          type="purchase"
          placeholder="Planned Purchase: Ex.(2000)"
          required
        />
        <label for="purchase">Enter price of planned purchase: </label>
      </div>
    </div>
    <div class="profile">

    </div>

    <select id="dropdown">
      {{#each Cats}}
        <option value="{{id}}">{{name}}</option>
      {{/each}}
    </select>
  </div>
  <button
    type="submit"
    class="btn bdgt-btn waves-effect waves-light deep-purple lighten-3"
    style="width: 300px; top: 130px; left: 140px;"
    onclick="bdgtSubmit()"
  >Create bdgt</button>
</form>
<div class="profile-container">
  <div class="bdgt-container">

  </div>
  <div class="chart-container">
    <canvas id="myChart"></canvas>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="/js/bdgtRender.js"></script>