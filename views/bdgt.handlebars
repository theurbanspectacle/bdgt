</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="/js/bdgtRender.js"></script>

<h1 class="title grey-text text-lighten-3">BDGT</h1>
<div class="bdgt-actions">
    <button class="waves-effect waves-teal deep-purple lighten-3 btn-large" onclick="addItem('income')"><i class="material-icons left">add</i>Add Income</button>
    <button class="waves-effect waves-teal deep-purple lighten-3 btn-large" onclick="addItem('expense')"><i class="material-icons right">remove</i>Add Expense</button>
</div>
<div id="remaining-budget"></div>
<div class="content-area total-chart">
    <canvas id="total-chart"></canvas>
</div>
<h2 class="content-area donut-chart-header title grey-text text-lighten-3">Income and Expense</h2>
<div class="content-area donut-chart">
    <canvas id="category-income-chart"></canvas>
    <canvas id="category-expense-chart"></canvas>
</div>
<h2 class="content-area table-header title grey-text text-lighten-3">Manage Income and Expenses</h2>
<table class="transactions striped" id="transactions">
</table>
<div id="transaction-modal" class="modal">
    <div class="modal-content">
        <h4 id="modal-header"></h4>
        <div class="row">
            <div class="input-field col s12">
                <input id="price" type="number" step="any" class="validate" required onkeyup="setPrice()">
                <label for="price">Price</label>
            </div>
        </div>
        <div class="row">
            <div>
                <label>Category</label>
                <select id="select-list" class="browser-default" onchange="setCategory()"></select>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button onclick="saveTransaction()" class="waves-effect waves-green btn-flat">Save</button>
        <button onclick="closeTransactionModal()" class="waves-effect waves-red btn-flat">Cancel</button>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="./scripts-bdgt.js"></script>
