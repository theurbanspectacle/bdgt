<div id="bdgt-form">
  <div class="row">
    <div class="input-field col s8">
      <input
        onkeyup="loginEnter(event)"
        id="income"
        type="income"
        placeholder="Monthly Income: Ex.(2000)"
      />
      <label for="income">Enter your monthly income: </label>
    </div>

    <div class="row">
      <div class="input-field col s8">
        <input
          onkeyup="loginEnter(event)"
          id="purchase"
          type="purchase"
          placeholder="Planned Purchase: Ex.(2000)"
        />
        <label for="purchase">Enter price of planned purchase: </label>
      </div>
    </div>

    <select id="dropdown">
      {{#each Cats}}
        <option value="{{id}}">{{name}}</option>
      {{/each}}
    </select>
  </div>
